<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/container"
    android:scrollbars="vertical"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView android:layout_height="124dp"
        android:layout_width="match_parent"
        android:id="@+id/textView3"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Add Student"/>

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopof="parent"
        app:layout_constraintStat_toStartof="parent"
        app:layout_constraintEnd_toEndof="parent"
        android:selectAllOnFocus="true"
        android:inputType="textEmailAddress"
        android:hint="Enter User Name"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="96dp"
        android:layout_marginStart="24dp"/>

    <EditText
        android:id="@+id/age"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inputType="number"
        android:hint="Enter Age"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="96dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toButtomof="@+id/username"/>


    <EditText
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inputType="number"
        android:hint="Enter Address"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="26dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toButtomof="@+id/age"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Gender"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="26dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toButtomof="@+id/address"/>

    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginEnd="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="64dp"
        app:layout_constraintTop_toButtomof="@+id/textView">

        <RadioButton
            android:id="@+id/rbMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"/>

        <RadioButton
        android:id="@+id/rbFemale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Female"/>

        <RadioButton
        android:id="@+id/rbOthers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Others"/>
    </RadioGroup>

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_gravity="start"
        android:layout_marginEnd="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="64dp"
        app:layout_constraintTop_toButtomof="@+id/rbOthers"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintButtom_toButtomof="parent"
        android:saveEnabled="true"
        />

</LinearLayout>

